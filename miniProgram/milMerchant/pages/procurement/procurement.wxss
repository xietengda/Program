@import "../../template/template.wxss";

.all_P_head_one{
  background-color: white;
  width: 100%;
  height: 70rpx;
  color: #333;
  font-size:24rpx;
  vertical-align:  middle;
  display: flex;
  justify-content: space-around; 
  align-items: center;
}
.all_P_head_one>text{
  line-height: 50rpx;
  height: 50rpx;
}
.all_P_head_one_sel{
  border-bottom: 2rpx solid #e50012;
}
.all_P_cont{
  margin-top: 10rpx;
  padding-bottom: 90rpx;
}
.proList{
  height: 138rpx;
  padding: 0 3%;
  background-color: white;
  position: relative;
  margin-bottom: 5rpx;
}
.proImg{
  width: 138rpx;
  height: 138rpx;
  float: left;
}
.proMsg{
  float: left;
  margin-left: 27rpx;
}
.proTil{
  color: #353535;
  font-size: 30rpx;
  margin-top: 29rpx;
}
.probtn{
  position: absolute;
  display: inline-block;
  line-height: 44rpx;
  width: 170rpx;
  height: 44rpx;
  background-color: white;
  border: 1rpx solid #e50012;
  border-radius: 5rpx;
  font-size: 22rpx;
  color: #e70012;
  right: 3%;
  bottom: 16rpx;
}
.cart_count{
  position: absolute;
  left: 188rpx;
  bottom: 16rpx;
  color: #353535;
  background-color: #f9f9f9;
}
.cart_count>view{
  width: 40rpx;
  height: 44rpx;
  font-size:22rpx;
  float: left;
  text-align: center;
  line-height: 44rpx;
}
.cart_count>input{
  width: 50rpx;
  float: left;
  font-size: 20rpx;
  min-height: 42rpx !important;
  height: 42rpx !important; 
  text-align: center;
} 
.all_P_btm{
  width: 100%;
  position: fixed;
  height: 78rpx;
  background-color: white;
  text-align: right;
  color: #6f6f6f;
  font-size: 18rpx;
  bottom: 0;
  z-index: 2;
  line-height: 78rpx;
}
.all_P_btm>view{
  float: right;
  margin-right: 20rpx;
}
.all_P_btm>button{
  float: right;
  width: 231rpx;
  height: 78rpx;
  font-size: 30rpx;
  background-color: #e50012;
  color: white;
  line-height: 78rpx;
  border-radius: 0;
}