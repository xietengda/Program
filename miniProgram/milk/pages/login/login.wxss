@import "../../template/template.wxss";

page{
  width: 100%;
  height: 100%;
  background-color: white;
}
.login_head{
  width: 90%;
  margin: 0 auto;
  margin-top: 85rpx;
}
.head_input{
  height: 100rpx;
  border-bottom: 1rpx solid #e5e5e5;
}
.head_input>text{
  float: left;
  line-height: 100rpx;
  font-size: 30rpx;
  color: #323232;
}
.head_input>input{
  float: left;
  width: 50%;
  height: 60%;
  margin-top: 20rpx;
  font-size: 26rpx;
  margin-left: 80rpx;
}
.forget_pwd{
  text-align: right;
  color: #8e8e8e;
  font-size: 24rpx;
  margin-top: 20rpx;
}
.login_head>button{
  width: 100%;
  height: 85rpx;
  border-radius: 25rpx;
  color: #333;
  font-size: 30rpx;
}
.login_head>button::after{
  border: none;
}
.login_btn{
  background-color: white;
  border: 1rpx solid #e50012;
  margin-top: 45rpx;
}
.rapid_login{
  color: white !important;
  background-color: #e50012;
  margin-top: 40rpx;
}
.login_btm{
  position: absolute;
  width:100%;
  bottom: 0;
  height: 240rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  border-top: 1rpx solid #e5e5e5;
}
.login_btm_list>view{
  color: #e50012;
  font-size: 24rpx;
}
.login_btm_list>button{
  width: 165rpx;
  height: 40rpx;
  border-radius: 50rpx;
  border: 1px solid #e5e5e5;
  color: #323232;
  font-size: 24rpx;
  background-color: white;
  margin-top: 30rpx;
  line-height: 38rpx;
}
.login_btm_list>button::after{
  border: none;
}
