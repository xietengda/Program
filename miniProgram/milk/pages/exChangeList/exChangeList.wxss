@import "../../template/template.wxss";

.exList_head{
  position: fixed;
  width: 100%;
}
.exList_class{
  height:62rpx;
  line-height: 58rpx;
  background-color: white;
  white-space: nowrap;
  font-size: 0;
  -webkit-text-size-adjust: none;
}
.exList_class view{
  display:inline-block !important;
  padding: 0 20rpx;
  margin: 0 30rpx; 
  font-size: 24rpx;
  color: #232323;
}
.exList_class_sel{
  border-bottom: 2rpx solid #e50012;
}
.exList_cont{
  position: fixed;
  width: 100%;
  top: 162px;
  bottom: 0;
  padding-bottom: 20rpx;
}
.exList_cont navigator{
  display: block;
  width: 100%;
}
.exList_cont navigator:nth-child(1){
  padding-top: 10rpx;
}
.exList_cont_list{
  width: 100%;
  height: 192rpx;
  background-color: white;
  border-bottom: 1rpx solid #e5e5e5;
}
.cont_list_img{
  width:155rpx;
  height: 155rpx;
  float: left; 
  margin-left: 20rpx;
  margin-top: 15rpx;
}
.cont_list_msg{
  float: left;
  margin-left: 50rpx;
}
.list_msg_til{
  color: #353535;
  font-size: 30rpx;
  margin-top: 26rpx;
  font-weight: bold;
}
.list_msg_newP{
  color: #f52039;
  font-size: 30rpx;
  margin-top: 14rpx;
  font-weight: bold;
}
.list_msg_oldP{
  color: #8d8d8d;
  font-size: 20rpx;
  margin-top: 14rpx;
}