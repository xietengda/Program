@import "../../template/template.wxss";

page{
  background-color: white;
}
.lea_head{
  width: 95%;
  margin: 0 auto;
  padding-top: 95rpx;
}
.lea_head_list{
  width: 100%;
  height: 98rpx;
  line-height: 98rpx;
  border-bottom: 1rpx solid #e5e5e5;
}
.lea_head_list>view{
  float: left;
  color: #323232;
  font-size: 30rpx;
  width: 25%;
}
.lea_head_list>input{
  float: left;
  width: 60%;
  margin-top: 20rpx;
  font-size: 26rpx;
}
.lea_textarea{
  width: 90%;
  margin: 0 auto;
  margin-top: 38rpx;
  padding: 3% 5%;
  border-radius: 10rpx;
  border: 1px solid #D8d8d8;
  font-size: 24rpx;
}
.lea_textarea_p{
  color: #D8d8d8;
}
.lea_btn{
  width: 99%;
  margin: 0 auto;
  margin-top: 50rpx;
  height: 85rpx;
  font-size:30rpx; 
  color: white;
  border-radius: 30rpx;
  background-color: #e50012;
}