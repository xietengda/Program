@import "../../template/template.wxss";

.order_head{
  position: fixed;
  z-index: 2;
  width: 100%;
}
.order_head_sta{
  padding: 0 3%;
  height: 66rpx;
  background-color: white;
  margin-top: 10rpx;
}
.order_head_sta>view{
  float:left;
  width: 20%;
  text-align: center;
  line-height: 64rpx;
  font-size: 24rpx;
  color: #232323;
}
.sta_sel{
  border-bottom: 2rpx solid #e50012;
}
.order_cont{
  position: fixed;
  top: 300rpx;
  bottom: 0;
}
.order_list{
  padding-bottom: 20rpx;
  background-color: white;
  margin-top: 10rpx;
  margin-bottom: 20rpx;
}
.order_list>view{
  padding: 0 3%;
}
.order_list_one{
  height:64rpx;
  border-bottom: 1rpx solid #e5e5e5;
  line-height: 64rpx; 
}
.order_list_one_L{
  float: left;
  color: #989898;
  font-size: 24rpx;
}
.order_list_one_L>view>text{
  color: #000 !important;
}
.order_list_one_R{
  float: right;
  height: 100%;
  font-size: 0;
}
.order_list_one_R>view{
  font-size: 24rpx;
  color: #989898;
  margin-left: 20rpx;
  vertical-align: sup;
  float: left;
}
.order_list_one_R>view>text{
  float: left;
  width: 28rpx;
  height: 32rpx;
  vertical-align: middle;
  margin-right: 5rpx;
  background-size: 100% 100%;
  margin-top: 18rpx;
}
.order_list_one_R>view>navigator>text{
  float: left;
  width: 28rpx;
  height: 32rpx;
  vertical-align: middle;
  margin-right: 5rpx;
  background-size: 100% 100%;
  margin-top: 18rpx;
}
 .order_list_one_R>view:nth-child(2)>text{
  height: 28rpx
} 
.order_list_two{
  height: 98rpx;
  border-bottom: 1rpx solid #e5e5e5;
}
.order_list_two_L{
  float: left; 
  color: #989898;
  font-size: 24rpx;
}
.order_state{
  color: #e50012;
}
.order_list_two_L>view:nth-child(1){
  margin-top: 15rpx;
}
.order_list_two_L>view:nth-child(2){
  margin-top: 10rpx;
}
.order_list_two_L>view:nth-child(2)>text{
  color: #000;
}
.order_list_two_R{
  float: right;
}
.order_evaluate::after{
  border: none;
}
.order_evaluate{
  width: 200rpx;
  height: 60rpx;
  font-size: 24rpx;
  border: 1rpx solid #e5e5e5;
  color: #989898;
  border-radius:50rpx;
  margin-top: 20rpx;
  background-color: white;
  display: inline-block;
  margin-right: 20rpx;
}
.order_list_R_btn::after{
  border: none;
}
.order_list_R_btn{
  display: inline-block;
  width: 200rpx;
  height: 60rpx;
  font-size: 24rpx;
  color: white;
  border-radius:50rpx;
  background-color: #e50012;
  margin-top: 20rpx;
}
.order_list_three_til{
  height: 68rpx;
  margin-top: 20rpx;
}
.order_list_three_til>text{
  display: inline-block;
  width: 20rpx;
  height: 40rpx;
  background-size: 100% 100%;
  vertical-align: middle;
}
.order_list_three_til>view{
  display: inline-block;
  margin-left: 10rpx;
  color: #232323;
  font-size: 24rpx;
}
.order_list_view_msg{
  height: 176rpx;
}
.order_list_msg_img{
  float: left;
  width: 140rpx;
  height: 140rpx;
  margin-top: 13rpx;
}
.list_view_msg_R{
  float: left;
  margin-left: 30rpx;
}
.list_view_msg_R_til{
  color: #353535;
  font-size: 24rpx;
  font-weight: bold;
  margin-top: 14rpx;
}
.list_view_msg_R_num{
  color: #3e403f;
  font-size: 20rpx;
  margin-top: 14rpx;
}
.list_view_msg_R_price{
  font-size: 20rpx;
  color: #3e403f;
  margin-top: 14rpx;
}
.list_view_msg_R_price>text{
  color: #e50012;
}





