@import "../../template/template.wxss";

.com_one{
  background-color: white;
  margin-top: 20rpx;
  padding: 0 3%;
  padding-bottom: 20rpx;
  border-top: 1px solid white;
}
.com_one_til{
  color: #1a1a1a;
  font-size: 36rpx;
  margin-top: 45rpx;
  font-weight: bold;
}
.com_one_date{
  font-size: 24rpx;
  margin-top: 26rpx;
  padding-bottom: 20rpx;
}
.com_one_date>text:nth-child(1){
  color: #484848;
  margin-right: 50rpx;
}
.com_one_date>text:nth-child(2){
  color: #9a9a9a;
}
.com_cont{
  margin-top: 20rpx;
  color: #000;
  font-size: 20rpx;
  line-height: 1.5;
}
.com_img{
  width: 100%;
  height: 383rpx;
  margin: 20rpx 0;
}
.com_subTil{
  margin-top: 10rpx;
  color: #000;
  font-size: 24rpx;
  font-weight: bold;
}
.com_comment{
  background-color: white;
}
.com_comment_til{
  padding: 0 3%;
  height: 64rpx;
  background-color: #fafafa;
  font-size: 24rpx;
  color: #232323;
  line-height: 64rpx;
}
.com_comment_cont{
  padding: 0 3%;
  padding-bottom: 110rpx;
}
.com_comment_cont>view:last-child{
  border: none;
}
.comment_cont_list{
  height: 145rpx;
  border-bottom: 1rpx solid #e5e5e5;
}
.comment_cont_img{
  float: left;
  width: 60rpx;
  height: 60rpx;
  margin-top: 22rpx;
  border-radius: 100%;
  overflow: hidden;
}
.comment_cont_msg{
  float: left;
  margin-left: 20rpx;
}
.comment_cont_name{
  color: #232323;
  font-size: 24rpx;
  margin-top: 29rpx;
  font-weight: bold;
}
.comment_cont_date{
  color: #a1a0a0;
  font-size: 20rpx;
  margin-top: 10rpx;
  font-weight: bold
}
.comment_cont_text{
  color: #4c4c4c;
  font-size: 20rpx;
  font-weight: bold;
  margin-top: 10rpx;
}
.com_btm{
  width: 100%;
  height:103rpx;
  position: fixed;
  background-color: white;
  bottom: 0; 
  border-top: 1rpx solid #e5e5e5;
}
.com_btm_list{
  width: 25%;
  float: left;
  text-align: center;
}
.com_btm_list>view:nth-child(1){
  width: 44rpx;
  height: 40rpx;
  margin: 0 auto;
  margin-top: 15rpx;
}
.com_btm_list>view:nth-child(2){
  font-size: 20rpx;
  color: #888;
  margin-top: 10rpx;
}

.com_comment_frame{
  position: fixed;
  width: 100%;
  height: 510rpx;
  border-top: 1px solid #E5e5e5;
  top: 124rpx;
  background-color: white;
  
}
.commentPla{
  color: #dbdbdb;
}
.com_comment_frame>textarea{
  width: 84%;
  height: 363rpx;
  padding: 10rpx 5%;
  margin: 0 auto;
  border:1rpx solid #a1a1a1;
  border-radius: 20rpx;
  margin-top: 20rpx;
  font-size: 20rpx;
}
.com_comment_frame_btm{
  padding: 0 3%;
  margin-top: 30rpx;
}
.com_comment_frame_btm>button{
  float: left;
  width: 48%;
  height: 59rpx;
  font-size: 30rpx;
  border-radius: 30rpx;
  line-height: 59rpx;
  color: white;
  background-color: #e50012;
  border: 1px soid red;
}
.com_comment_frame_btm>button:nth-child(1){
  margin-right: 4%;
  color: #e50012;
  background-color: white;
  border:1rpx solid #e50012;
}