@import "../../template/template.wxss";

.order_de_head {
  padding: 15rpx 0;
  background-color: white;
  margin-top: 20rpx;
}

.order_de_head>view {
  padding: 0 3%;
  line-height: 42rpx;
  color: #989898;
  font-size: 26rpx;
  letter-spacing: 2rpx;
}

.order_de_head>view text {
  color: #000;
}

.order_de_sta {
  color: #e50012 !important;
}

.order_de_cont {
  margin-top: 20rpx;
  background-color: white;
}

.order_de_cont_til {
  height: 68rpx;
  width: 95%;
  margin: 0 auto;
  border-bottom: 1rpx solid #e5e5e5;
}

.order_de_cont_til>text {
  display: inline-block;
  width: 20rpx;
  height: 40rpx;
  background-size: 100% 100%;
  vertical-align: middle;
}

.order_de_cont_til>view {
  display: inline-block;
  margin-left: 10rpx;
  color: #232323;
  font-size: 24rpx;
}

.order_de_cont_til>button::after {
  border: none;
}

.order_buyAgain {
  float: right;
  height: 42rpx;
  line-height: 40rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  color: #e50012;
  border: 1px solid #e50012;
  margin-top: 15rpx;
}

.order_de_cont_cont>navigator {
  display: block;
}

.order_de_cont_cont>navigator:last-child>view {
  border: none;
}

.cont_cont_list {
  width: 95%;
  margin: 0 auto;
  height: 186rpx;
  border-bottom: 1rpx solid #e5e5e5;
}

.cont_cont_img {
  float: left;
  width: 150rpx;
  height: 150rpx;
  margin-top: 10rpx;
}

.cont_cont_M {
  float: left;
  margin-left: 30rpx;
  width: 500rpx;
}

.cont_cont_M>view:nth-child(1) {
  color: #353535;
  font-size: 24rpx;
  margin-top: 40rpx;
  font-weight: bold;
}

.cont_cont_M>view:nth-child(2) {
  color: #3e403f;
  font-size: 20rpx;
  margin-top: 25rpx;
}

.cont_cont_R {
  float: right;
  color: #3e403f;
  font-size: 24rpx;
}

.cont_cont_R>text {
  color: #e50012;
  font-size: 36rpx;
}

.order_de_btn {
  margin-top: 20rpx;
  background-color: white;
  padding: 10rpx 0;
}

.order_de_btn_list {
  width: 95%;
  margin: 0 auto;
  height: 42rpx;
  line-height: 42rpx;
  font-size: 24rpx;
  color: #232323;
}

.order_de_btn_list>text:nth-child(1) {
  float: left;
}

.order_de_btn_list>text:nth-child(2) {
  float: right;
  color: #e50012;
}

.order_de_btn_list_other {
  height: 70rpx;
  width: 95%;
  margin: 0 auto;
  line-height: 70rpx;
  text-align: right;
  font-size: 28rpx;
  color: #232323;
  margin-top: 10rpx;
}

.order_de_btn_list_other>text:nth-child(2) {
  color: #e50012;
}

.order_de_btm_two {
  width: 95%;
  margin: 0 auto;
  margin-top: 30rpx;
}

.order_de_btm_two_btn::after {
  border: none;
}

.order_de_btm_two_btn {
  width: 100%;
  height: 86rpx;
  line-height: 86rpx;
  color: white;
  font-size: 30rpx;
  border-radius: 20rpx;
  background-color: #e50012;
}

.order_comment_btn {
  width: 75px;
  font-size: 10px;
  position: absolute;
  right: 7px;
  margin-top: 7px;
  background-color: red;
  color: white;
}
