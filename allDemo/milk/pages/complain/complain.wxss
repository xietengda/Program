@import "../../template/template.wxss";

page{
  width: 100%;
  height: 100%;
}
.com_cont{
  position: absolute;
  top: 135rpx;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: white;
} 
.com_sub_cont{
  width: 90%;
  margin: 0 auto;
}
.com_cont_til{
  color:#232323;
  font-size: 30rpx;
  margin-top: 35rpx;
}
.com_cont_type{
  margin-top: 25rpx;
}
.com_cont_type>view{
  padding: 10rpx 20rpx;
  color: #787878;
  font-size: 24rpx;
  border-radius: 50rpx;
  border: 1px solid #e5e5e5;
  margin-right: 20rpx;
  float: left;
  margin-bottom: 20rpx;
}
.com_cont_type_sel{
  background-color: #e50012;
  color: white !important;
}
.com_cont_textarea{
  width: 90%;
  padding: 5% 5%;
  height: 235rpx;
  border-radius: 30rpx;
  background-color: #f9f9f9;
  margin-top: 20rpx;
  font-size: 24rpx;
}
.com_textare{
  color: #8d8d8d;
}
.com_cont_photo{
  padding: 20rpx 0rpx;
}
.com_cont_btn{
  width: 100%;
  height: 80rpx;
  border-radius: 20rpx;
  background-color: #e50012;
  color: white;
  margin-top: 30rpx;
  font-size: 30rpx;
}