@import "../../template/template.wxss";


.sign_btn{
  width: 225rpx;
  height: 225rpx;
  border-radius: 100%;
  margin: 0 auto;
  margin-top: 20rpx;
  color: white;
  border: 10rpx solid #f78796;
  text-align: center;
  line-height: 225rpx;
  background-color: #DC101F;
  font-size:48rpx;
}
.sign_describe{
  color: #868686;
  font-size: 24rpx;
  text-align: center;
  margin-top: 30rpx;
}
.sign_head>button{
  width:180rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 50rpx;
  color: white;
  font-size: 28rpx;
  background-color: #e50012; 
  margin-top: 30rpx;
}
.sign_cont{
  position: relative;
  height: 160rpx;
  margin-top: 30rpx;
}
.sign_record{
  width: 90%;
  height: 120rpx;
  margin: 0 auto;
  position: absolute;
  top: 20rpx;
  left: 0;
  right: 0;
  z-index: 3;
}
.sign_record_con{
  display: flex;
  justify-content: space-between;
}
.sign_record_list{
  width: 80rpx;
  text-align: center;
  position: relative;
}
.intView{
  width: 48rpx;
  height: 55rpx;
  background: url('data:image/png;base64,') center center no-repeat;
  background-size: 100% 100%;
  color: white;
  font-size: 24rpx;
  margin: 0 auto;
  position: absolute;
  top: -15rpx;
  left: 0;
  right: 0;
  line-height: 40rpx;
}
.sign_state{
  font-size: 26rpx;
  font-weight: bold;
  color: #232323;
  width: 100%;
  position: absolute;
}
.sign_icon{
  width: 20rpx;
  height: 20rpx;
  background-color: white;
  border: 1rpx solid #DC101F;
  border-radius: 100%;
  margin: 0 auto;
  margin-top: 40rpx;
}
.sign_date{
  font-size: 18rpx;
  color: #232323;
  margin-top: 24rpx;
}

.sign_record_line{
  width: 90%;
  height: 120rpx;
  margin: 0 auto;
  position: absolute;
  top: 20rpx;
  left: 0;
  right: 0;
  z-index: 2;
}
.sign_record_line>view{
  width: 90%;
  margin: 0 auto;
  margin-top: 50rpx;
  border: 1.5px solid red;
}