@import "../../template/template.wxss";

page{
  background-color: #fafafa;
}
.search_cont{
  background-color: white;
  padding-top: 10rpx;
  padding: 0 5%;
}
.search_cont>view:last-child>.list_cont{
  border: none;
}
.searchList_til{
  font-size: 0;
  padding-top: 20rpx;
  color: white;
  position: relative;
}
.searchList_til>view{
  font-size: 28rpx;
  color: #232323;
  display: inline-block;
  line-height: 60rpx;
}
.searchList_til>text{
  display: inline-block;
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  right: 0;
  margin: auto;
  top: 0;
  bottom: 0;
}
.list_cont{
  font-size: 0;
  margin-top: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #e5e5e5;
}
.list_cont text{
  display: inline-block;
  background-color: #f5f5f5;
	border-radius: 10rpx;
  font-size: 24rpx;
  color: #232323;
  height: 47rpx;
  line-height: 47rpx;
  padding: 0 24rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}